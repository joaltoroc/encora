{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@users/(.*)": "<rootDir>/../src/users/$1",
    "^@shared/(.*)": "<rootDir>/../src/shared/$1"
  }
}
